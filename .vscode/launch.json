    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "attach",
            "name": "Debug executable 'rustdesk'",
            "program" : "${workspaceFolder}/target/debug/rustdesk",
            "processID" : "${command:pickProcess}",
        },

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rustdesk'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rustdesk",
                    "--package=rustdesk"
                ],
                "filter": {
                    "name": "rustdesk",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },

    ] 
}