    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rustdesk'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rustdesk",
                    "--package=rustdesk"
                ],
                "filter": {
                    "name": "rustdesk",
                    "kind": "bin"
                }
            },
            "args": [],
            //"args": ["--connect", "192.168.111.8"],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": ["rust"],        
        },
        {
            "type": "lldb",
            "request": "attach",
            "name": "Debug executable 'rustdesk'",
            "sourceLanguages": ["rust"],        
            "program" : "${workspaceFolder}/target/debug/rustdesk",
            "pid" : "${command:pickProcess}",
        },
   ] 
}